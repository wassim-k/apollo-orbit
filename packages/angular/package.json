{
  "name": "@apollo-orbit/angular",
  "version": "0.0.0",
  "description": "A fully-featured GraphQL client for Angular with modular state management.",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wassim-k/apollo-orbit.git"
  },
  "keywords": [
    "apollo",
    "@apollo/client",
    "angular",
    "ngxs",
    "ngrx",
    "graphql",
    "state",
    "state-management"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "scripts": {
    "build": "ng-packagr --config ./tsconfig.lib.json -p ng-package.json",
    "clean": "rimraf dist",
    "codegen:test": "graphql-codegen --config ./tests/graphql/codegen.ts",
    "prebuild": "yarn clean"
  },
  "peerDependencies": {
    "@angular/common": ">=8.0.0",
    "@angular/core": ">=8.0.0",
    "@apollo/client": "^3.8.0",
    "graphql": ">=0.11",
    "rxjs": ">=7.0.0"
  },
  "dependencies": {
    "@apollo-orbit/core": "^0.9.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "jest-preset-angular": "^13.1.4",
    "shortid": "^2.2.16",
    "ts-jest": "^29.1.1"
  }
}
