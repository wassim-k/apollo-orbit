{
  "name": "@apollo-orbit/angular",
  "version": "2.1.0",
  "description": "A full-featured GraphQL client for Angular",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wassim-k/apollo-orbit.git"
  },
  "keywords": [
    "apollo",
    "@apollo/client",
    "angular",
    "ngxs",
    "ngrx",
    "graphql",
    "state",
    "state-management"
  ],
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "scripts": {
    "build": "ng-packagr --config ./tsconfig.lib.json -p ng-package.json",
    "clean": "rimraf dist",
    "codegen:test": "graphql-codegen --config ./tests/graphql/codegen.ts",
    "types:sync": "tsx ../../scripts/syncApolloTypes.ts",
    "prebuild": "yarn clean && yarn types:sync"
  },
  "peerDependencies": {
    "@angular/common": ">=19.0.0",
    "@angular/core": ">=19.0.0",
    "@apollo/client": "^4.0.0",
    "graphql": ">=0.11",
    "rxjs": ">=7.0.0"
  },
  "dependencies": {
    "@apollo-orbit/core": "^2.0.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^1.22.4",
    "@analogjs/vitest-angular": "^1.22.4",
    "@angular-devkit/build-angular": "^20.3.8",
    "@angular/platform-browser": "^20.3.9",
    "@angular/router": "^20.3.9",
    "jsdom": "^27.1.0",
    "uuid": "^11.1.0"
  }
}
