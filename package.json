{
  "name": "apollo-orbit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "lerna link --loglevel error && lerna run build --scope @apollo-orbit/*",
    "clean": "lerna run clean --scope @apollo-orbit/*",
    "clean:node_modules": "npx rimraf --glob **/node_modules",
    "test": "jest --no-watchman --no-cache",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint --ext .ts,.tsx .",
    "postinstall": "yarn build"
  },
  "workspaces": {
    "packages": [
      "./",
      "integration/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/*",
      "**/@nguniversal/*",
      "**/ts-jest"
    ]
  },
  "dependencies": {
    "@apollo-orbit/angular": "*",
    "@apollo-orbit/codegen": "*",
    "@apollo-orbit/core": "*",
    "@apollo-orbit/react": "*"
  },
  "devDependencies": {
    "@angular/compiler": "^15.2.5",
    "@angular/compiler-cli": "^15.2.5",
    "@angular/core": "^15.2.5",
    "@apollo/client": "^3.7.11",
    "@graphql-codegen/add": "^4.0.1",
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/typed-document-node": "^4.0.0",
    "@graphql-codegen/typescript": "^3.0.2",
    "@graphql-codegen/typescript-operations": "^3.0.2",
    "@octokit/core": "^4.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "concurrently": "^8.0.1",
    "graphql": "^16.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.0",
    "ng-packagr": "^15.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.1.0",
    "ts-node": "~10.9.1",
    "tslib": "^2.5.0",
    "typescript": "~4.8.2",
    "zone.js": "~0.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "nx": "15.6.3"
  }
}
