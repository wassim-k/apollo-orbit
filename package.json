{
  "name": "apollo-orbit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "lerna link && lerna run build --scope @apollo-orbit/*",
    "clean": "lerna run clean --scope @apollo-orbit/*",
    "clean:node_modules": "npx rimraf --glob **/node_modules",
    "codegen:clean": "rimraf packages/**/*.{query,mutation,subscription,fragment}.ts integration/**/*.{query,mutation,subscription,fragment}.ts",
    "test": "jest --no-watchman",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "workspaces": {
    "packages": [
      "./",
      "integration/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/*",
      "**/@nguniversal/*",
      "**/ts-jest"
    ]
  },
  "dependencies": {
    "@apollo-orbit/angular": "*",
    "@apollo-orbit/codegen": "*",
    "@apollo-orbit/core": "*",
    "@apollo-orbit/react": "*"
  },
  "devDependencies": {
    "@angular/compiler": "^13.3.6",
    "@angular/compiler-cli": "^13.3.6",
    "@angular/core": "^13.3.6",
    "@apollo/client": "^3.6.2",
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/near-operation-file-preset": "^2.2.10",
    "@graphql-codegen/typescript": "^2.4.9",
    "@graphql-codegen/typescript-operations": "^2.3.6",
    "@graphql-codegen/typescript-resolvers": "^2.6.2",
    "@octokit/core": "^3.6.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "concurrently": "^7.1.0",
    "graphql": "^15.0.0",
    "husky": "^7.0.4",
    "jest": "^27.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "ng-packagr": "^13.3.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "ts-jest": "^27.0.0",
    "ts-node": "~10.7.0",
    "tslib": "^2.4.0",
    "typescript": "~4.6.4",
    "zone.js": "~0.11.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "caniuse-lite": "1.0.30001332"
  }
}
