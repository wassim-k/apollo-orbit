{
  "name": "apollo-orbit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "lerna run build --scope @apollo-orbit/*",
    "clean": "lerna run clean --scope @apollo-orbit/*",
    "clean:node_modules": "npx rimraf --glob **/node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint",
    "postinstall": "link-workspaces --silent && node scripts/copySymlinks.js"
  },
  "workspaces": {
    "packages": [
      "integration/*",
      "packages/*"
    ],
    "nohoist": [
      "@integration/angular/@angular/*"
    ]
  },
  "devDependencies": {
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.9",
    "@angular/compiler-cli": "^20.3.9",
    "@angular/core": "^20.3.9",
    "@apollo/client": "^4.0.9",
    "@graphql-codegen/add": "^6.0.0",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@octokit/core": "^7.0.6",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "graphql": "^16.11.0",
    "graphql-sock": "^1.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lerna": "^9.0.0",
    "link-workspaces": "^1.1.0",
    "lint-staged": "^16.1.6",
    "ng-packagr": "^20.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.5",
    "zone.js": "^0.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
