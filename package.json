{
  "name": "apollo-orbit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "lerna link && lerna run build --scope @apollo-orbit/*",
    "clean": "lerna run clean --scope @apollo-orbit/*",
    "clean:node_modules": "npx rimraf --glob **/node_modules",
    "codegen:clean": "rimraf packages/**/*.{query,mutation,subscription,fragment}.ts integration/**/*.{query,mutation,subscription,fragment}.ts",
    "test": "jest --no-watchman",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "workspaces": {
    "packages": [
      "./",
      "integration/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/*",
      "**/@nguniversal/*",
      "**/ts-jest"
    ]
  },
  "dependencies": {
    "@apollo-orbit/angular": "*",
    "@apollo-orbit/codegen": "*",
    "@apollo-orbit/core": "*",
    "@apollo-orbit/react": "*"
  },
  "devDependencies": {
    "@angular/compiler": "^15.0.3",
    "@angular/compiler-cli": "^15.0.3",
    "@angular/core": "^15.0.3",
    "@apollo/client": "^3.7.2",
    "@graphql-codegen/add": "^3.2.3",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/near-operation-file-preset": "^2.4.4",
    "@graphql-codegen/typescript": "^2.8.5",
    "@graphql-codegen/typescript-operations": "^2.5.10",
    "@graphql-codegen/typescript-resolvers": "^2.7.10",
    "@octokit/core": "^4.1.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.6.0",
    "graphql": "^16.6.0",
    "husky": "^8.0.2",
    "jest": "^28.0.0",
    "jest-environment-jsdom": "^29.2.2",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "ng-packagr": "^15.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.6.0",
    "ts-jest": "^28.0.0",
    "ts-node": "~10.9.1",
    "tslib": "^2.4.1",
    "typescript": "~4.8.4",
    "zone.js": "~0.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "caniuse-lite": "1.0.30001431"
  }
}
