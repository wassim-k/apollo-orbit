{
  "name": "apollo-orbit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "lerna link && lerna run build --scope @apollo-orbit/*",
    "clean": "lerna run clean --scope @apollo-orbit/*",
    "clean:node_modules": "npx rimraf --glob **/node_modules",
    "codegen:clean": "rimraf packages/**/*.{query,mutation,subscription,fragment}.ts integration/**/*.{query,mutation,subscription,fragment}.ts",
    "test": "jest --no-watchman",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "workspaces": {
    "packages": [
      "./",
      "integration/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/*",
      "**/@nguniversal/*",
      "**/ts-jest"
    ]
  },
  "dependencies": {
    "@apollo-orbit/angular": "*",
    "@apollo-orbit/codegen": "*",
    "@apollo-orbit/core": "*",
    "@apollo-orbit/react": "*"
  },
  "devDependencies": {
    "@angular/compiler": "^12.2.2",
    "@angular/compiler-cli": "^12.2.2",
    "@angular/core": "^12.2.2",
    "@apollo/client": "^3.3.19",
    "@graphql-codegen/add": "^3.0.0",
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/near-operation-file-preset": "^2.0.0",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@graphql-codegen/typescript-resolvers": "^2.1.0",
    "@octokit/core": "^3.5.1",
    "@types/jest": "^27.0.1",
    "@types/node": "~12.12.50",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.2.1",
    "graphql": "^15.5.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "ng-packagr": "^12.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.5",
    "ts-jest": "^27.0.5",
    "ts-node": "~10.2.1",
    "tslib": "^2.3.1",
    "typescript": "~4.3.5",
    "zone.js": "~0.11.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
