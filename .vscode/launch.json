  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--test-match=\"**/${relativeFile}\"",
        "--run-in-band",
        "--no-cache"
      ],
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      }
    }
  ]
}
