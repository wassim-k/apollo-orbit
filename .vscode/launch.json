{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--test-match=\"**/${relativeFile}\"",
        "--run-in-band",
        "--no-cache",
        "--test-timeout=30000"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/rxjs/**",
        "**/node_modules/jest*/**",
        "**/node_modules/zone.js*/**"
      ],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Sync Apollo Types",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "program": "${workspaceFolder}/scripts/syncApolloTypes.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate API Tables",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "program": "${workspaceFolder}/docs/scripts/generateApiTables.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}
