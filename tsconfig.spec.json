{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "types": [
      "node",
      "vitest/globals"
    ],
    "paths": {
      "@apollo-orbit/core/common": [
        "packages/core/common/src/index.ts"
      ],
      "@apollo-orbit/core": [
        "packages/core/src/index.ts"
      ],
      "@apollo-orbit/angular": [
        "packages/angular/src/index.ts"
      ],
      "@apollo-orbit/angular/state": [
        "packages/angular/state/src/index.ts"
      ],
      "@apollo-orbit/angular/http": [
        "packages/angular/http/src/index.ts"
      ],
      "@apollo-orbit/angular/batch-http": [
        "packages/angular/batch-http/src/index.ts"
      ],
      "@apollo-orbit/angular/fetch": [
        "packages/angular/fetch/src/index.ts"
      ],
      "@apollo-orbit/codegen": [
        "packages/codegen/src/index.ts"
      ],
      "@apollo-orbit/codegen/angular": [
        "packages/codegen/src/angular/index.ts"
      ],
      "@apollo-orbit/codegen/core": [
        "packages/codegen/src/core/index.ts"
      ],
      "@apollo-orbit/react": [
        "packages/react/src/index.ts"
      ]
    }
  },
  "files": [],
  "include": [
    "packages/**/tests",
    "packages/**/src"
  ]
}
